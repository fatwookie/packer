#cloud-config

# This is the user-data configuration file for cloud-init. By default this sets
# up an initial user called "ubuntu" with password "ubuntu", which must be
# changed at first login. However, many additional actions can be initiated on
# first boot from this file. The cloud-init documentation has more details:

autoinstall:
  version: 1
  early-commands:
    - systemctl stop ssh # otherwise packer tries to connect and exceed max attempts
  apt:
    primary:
        - arches: [default]
          uri: http://ubuntu.mirror.true.nl/ubuntu/
  keyboard:
    layout: en
    variant: us
  network:
    version: 2
    renderer: networkd
    ethernets:
      ens33: 
        dhcp4: true
        dhcp-identifier: mac
        dhcp6: false
  storage:
    swap:
      size: 0
    config:
    - {ptable: gpt, path: /dev/sda, wipe: superblock, preserve: false, name: '', grub_device: true,
      type: disk, id: disk-sda}
    - {device: disk-sda, size: 1048576, flag: bios_grub, number: 1, preserve: false,
      type: partition, id: partition-0}
    - {device: disk-sda, size: 1073741824, wipe: superblock, flag: '', number: 2, preserve: false,
      type: partition, id: partition-1}
    - {fstype: ext4, volume: partition-1, preserve: false, type: format, id: format-0}
    - {device: disk-sda, size: -1, wipe: superblock, flag: '', number: 3, preserve: false,
      type: partition, id: partition-2}
    - name: ubuntu-vg
      devices: [partition-2]
      preserve: false
      type: lvm_volgroup
      id: lvm_volgroup-0
    - {name: ubuntu-lv, volgroup: lvm_volgroup-0, size: 100%, preserve: false,
      type: lvm_partition, id: lvm_partition-0}
    - {fstype: ext4, volume: lvm_partition-0, preserve: false, type: format, id: format-1}
    - {device: format-1, path: /, type: mount, id: mount-1}
    - {device: format-0, path: /boot, type: mount, id: mount-0}
  ssh:
    install-server: true
    allow-pw: true
  identity:
    hostname: "{{user `vmname`}}"
    password: "$6$Wvx1OBt65TQmugYf$J0TUfgmlDX8btESPwyE9cHjMUn.fF/SpNHELDd7mzM22C9EYyRdJ7P9PYL8oUNquJNPJ.h8HtG26QCgV.Tv4C/" # r00tme
    username: ubuntu # root doesn't work
  package_update: true
  package_upgrade: true
  packages:
    - open-vm-tools
    - pwgen
    - curl
    - tmux
    - autossh
    - vim
    - aptitude
    - python3
    - jq
    - ansible
  late-commands:
    - echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu
    - 'sed -i "s/^#*\(send dhcp-client-identifier\).*$/\1 = hardware;/" /target/etc/dhcp/dhclient.conf'
