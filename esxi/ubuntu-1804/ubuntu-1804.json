{
    "builders": [{
      "name": "ubuntu-1804-base",
      "vm_name": "ubuntu-1804-base",
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "tools_upload_flavor": "linux",
      "headless": false,
  
      "iso_url": "http://releases.ubuntu.com/bionic/ubuntu-18.04.5-live-server-amd64.iso",
      "iso_checksum": "sha256:3756b3201007a88da35ee0957fbe6666c495fb3d8ef2e851ed2bd1115dc36446",
  
      "ssh_username": "installer",
      "ssh_password": "installer",
      "ssh_timeout": "15m",
  
      "disk_type_id": "thin",
  
      "floppy_files": [
        "preseed.cfg"
      ],
  
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz noapic ",
        "preseed/file=/floppy/ubuntu.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "grub-installer/bootdev=/dev/sda ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
  
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'nullgrid'|sudo -S sh 'shutdown.sh'",
  
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_host`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "keep_registered": true,

      "vnc_over_websocket": true,
      "insecure_connection": true,
  
      "vmx_data": {
        "ethernet0.networkName": "bodenstab.loc_vlan101"
      }
    }]
  }